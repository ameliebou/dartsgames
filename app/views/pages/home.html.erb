<div class="container">
  <h1>Welcome to Darts Games</h1>

  <h2>Create your game</h2>
  <%= simple_form_for @game do |f| %>
    <%= f.input :sets %>
    <%= f.input :legs %>
    <%= f.input :game_type, collection: Game.game_types %>
    <h5>Players:</h5>
    <%= f.simple_fields_for :player_1 do |form| %>
      <%= form.input :name, label: 'Player 1' %>
    <% end %>
    <%= f.simple_fields_for :player_2 do |form| %>
      <%= form.input :name, label: 'Player 2' %>
    <% end %>
    <%= f.simple_fields_for :player_3 do |form| %>
      <%= form.input :name, label: 'Player 3' %>
    <% end %>
    <%= f.simple_fields_for :player_4 do |form| %>
      <%= form.input :name, label: 'Player 4' %>
    <% end %>
    <%= f.button :submit, class: "btn-primary" %>
  <% end %>
</div>
